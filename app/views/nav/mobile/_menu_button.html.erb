<div class="-ml-2 mr-2 flex items-center md:hidden">
  <!-- Mobile menu button -->
  <button
    data-action="click->toggle#toggle"
    type="button"
    class="
      relative inline-flex items-center justify-center rounded-md p-2 text-gray-400
      hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2
      focus:ring-inset focus:ring-white
    "
    aria-controls="mobile-menu"
    aria-expanded="false"
  >
    <span class="absolute -inset-0.5"></span>
    <span class="sr-only">Open main menu</span>
    <!-- Icon when menu is closed. Menu open: "hidden", Menu closed: "block"
    -->
    <%= inline_svg_tag "bars-3.svg", class: "h-6 w-6 block" %>
    <!-- Icon when menu is open. Menu open: "block", Menu closed: "hidden" -->
    <%= inline_svg_tag "x-mark.svg", class: "h-6 w-6 hidden" %>
  </button>
</div>
