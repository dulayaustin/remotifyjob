<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <h2
      class="
        md:mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-white
      "
    >Sign up to RemotifyJob</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">

    <%= form_with model: @user, url: registrations_path, method: :post, html: {class: "space-y-6"} do |form| %>
      <div class="flex items-center justify-between">
        <div>
          <%= form.label :first_name, class: "block text-sm font-medium leading-6 text-white" %>
          <div class="mt-2">
            <%= form.text_field :first_name,
                            required: true,
                            autofocus: true,
                            class:
                              "block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
          </div>
        </div>

        <div>
          <%= form.label :last_name, class: "block text-sm font-medium leading-6 text-white" %>
          <div class="mt-2">
            <%= form.text_field :last_name,
                            required: true,
                            class:
                              "block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
          </div>
        </div>
      </div>

      <div>
        <%= form.label :email_address,
                   class: "block text-sm font-medium leading-6 text-white" %>
        <div class="mt-2">
          <%= form.email_field :email_address,
                           required: true,
                           autocomplete: "email_address",
                           class:
                             "block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div>
        <%= form.label :password, class: "block text-sm font-medium leading-6 text-white" %>
        <div class="mt-2">
          <%= form.password_field :password,
                              required: true,
                              autocomplete: "current-password",
                              maxlength: 72,
                              class:
                                "block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div>
        <%= form.label :confirm_password,
                   class: "block text-sm font-medium leading-6 text-white" %>
        <div class="mt-2">
          <%= form.password_field :confirm_password,
                              required: true,
                              maxlength: 72,
                              class:
                                "block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
        </div>
      </div>

      <div>
        <%= form.fields_for :account do |account_fields| %>
          <%= account_fields.label :name,
                               "Company name",
                               class: "block text-sm font-medium leading-6 text-white" %>
          <div class="mt-2">
            <%= account_fields.text_field :name,
                                      required: true,
                                      class:
                                        "block w-full rounded-md border-0 bg-white/5 py-1.5 text-white shadow-sm ring-1 ring-inset ring-white/10 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6" %>
          </div>
        <% end %>
      </div>

      <div>
        <%= form.submit "Sign up",
                    class:
                      "flex w-full justify-center rounded-md bg-indigo-500 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-400 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500" %>
      </div>
    <% end %>

    <p class="mt-10 text-center text-sm text-gray-400">
      Already have an account?
      <%= link_to "Sign in instead",
      new_session_path,
      class: "font-semibold leading-6 text-indigo-400 hover:text-indigo-300" %>
    </p>
  </div>
</div>
