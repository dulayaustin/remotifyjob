<div id="<%= dom_id job %>_detail">
  <%= render "shared/breadcrumbs",
  breadcrumbs: [
    { title: "Jobs", path: jobs_path },
    { title: job.title, path: job_path(job) },
  ] %>
  <div class="mt-2 md:flex md:items-center md:justify-between">
    <div class="min-w-0 flex-1">
      <h2
        class="
          text-2xl font-bold leading-7 text-white sm:truncate sm:text-3xl
          sm:tracking-tight
        "
      ><%= job.title %></h2>
      <div class="mt-1 flex flex-col sm:mt-0 sm:flex-row sm:flex-wrap sm:space-x-6">
        <div class="mt-2 flex items-center text-sm text-gray-300">
          <%= inline_svg_tag "briefcase.svg",
          class: "mr-1.5 h-5 w-5 flex-shrink-0 text-gray-500" %>
          <%= job.job_type.dasherize.humanize %>
        </div>
        <div class="mt-2 flex items-center text-sm text-gray-300">
          <%= inline_svg_tag "map-pin.svg",
          class: "mr-1.5 h-5 w-5 flex-shrink-0 text-gray-500" %>
          <%= job.location %>
          (<%= job.location_type.dasherize.humanize %>)
        </div>
        <% if job.salary_budget.present? %>
          <div class="mt-2 flex items-center text-sm text-gray-300">
            <%= inline_svg_tag "banknotes.svg",
            class: "mr-1.5 h-5 w-5 flex-shrink-0 text-gray-500" %>
            <%= job.salary_budget %>
          </div>
        <% end %>
        <div class="mt-2 flex items-center text-sm text-gray-300">
          <span
            class="
              inline-flex items-center rounded-md px-2 py-1 text-xs font-medium ring-1
              ring-inset <%= job_status_color(job.status) %>
            "
          >
            <%= job.status.humanize %>
          </span>
        </div>
      </div>
    </div>
    <div class="mt-5 flex lg:ml-4 lg:mt-0">
      <span class="">
        <%= link_to job_path(job, format: "html"), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this job?" }, class: "inline-flex items-center rounded-md bg-rose-500 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-rose-400" do %>
          <%= inline_svg_tag "trash.svg", class: "-ml-0.5 mr-1.5 h-5 w-5" %>
          Delete
        <% end %>
      </span>
      <span class="ml-3 ">
        <%= button_to edit_job_path(job), method: :get, data: { turbo_frame: "modal" }, class: "inline-flex items-center rounded-md bg-white/10 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-white/20" do %>
          <%= inline_svg_tag "pencil-square.svg", class: "-ml-0.5 mr-1.5 h-5 w-5" %>
          Edit
        <% end %>
      </span>
    </div>
  </div>
  <div class="mt-10 md:flex md:items-center md:justify-between">
    <div class="text-white" %>
      <%= raw job.description %>
    </div>
  </div>
</div>
